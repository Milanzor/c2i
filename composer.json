{
  "name": "milanzor/c2i",
  "require": {
    "cakephp/cakephp": "2.10.*",
    "cakephp/debug_kit": "2.2.x-dev"
  },
  "config": {
    "vendor-dir": "Vendor/"
  },
  "extra": {
    "installer-paths": {
      "Vendor/cakephp-plugin/{$name}": [
        "type:cakephp-plugin"
      ]
    }
  },
  "scripts": {
      "post-install-cmd": [
          "mv app/Config/core.php.template app/Config/core.php",
          "mv app/Config/database.php.template app/Config/database.php",
          "Vendor/bin/cake -app app install postInstall"
      ],
      "post-create-project-cmd": "@post-install-cmd"
  }
}
